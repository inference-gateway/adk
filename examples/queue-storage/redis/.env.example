# Environment configuration for Redis queue storage example

# Runtime Environment
ENVIRONMENT=development

# Server Configuration
A2A_SERVER_PORT=8080
A2A_DEBUG=true

# Queue Configuration (Redis)
A2A_QUEUE_PROVIDER=redis
A2A_QUEUE_URL=redis://redis:6379

# Redis-specific options
A2A_QUEUE_OPTIONS_DB=0
A2A_QUEUE_OPTIONS_MAX_RETRIES=3
A2A_QUEUE_OPTIONS_TIMEOUT=5s

# Redis credentials (uncomment if authentication is required)
# A2A_QUEUE_CREDENTIALS_USERNAME=redis_user
# A2A_QUEUE_CREDENTIALS_PASSWORD=redis_password

# Task Retention (for completed/failed tasks)
A2A_TASK_RETENTION_MAX_COMPLETED_TASKS=100
A2A_TASK_RETENTION_MAX_FAILED_TASKS=50
A2A_TASK_RETENTION_CLEANUP_INTERVAL=5m

# Agent Configuration (for AI-powered examples)
# A2A_AGENT_CLIENT_PROVIDER=openai
# A2A_AGENT_CLIENT_MODEL=gpt-4o-mini
# A2A_AGENT_CLIENT_API_KEY=your_api_key_here

# Capabilities
A2A_CAPABILITIES_STREAMING=true
A2A_CAPABILITIES_PUSH_NOTIFICATIONS=false
A2A_CAPABILITIES_STATE_TRANSITION_HISTORY=true

# Redis Configuration (for the Redis container)
REDIS_PASSWORD=
REDIS_DATABASE=0